<% include partials/header %>

    <div class="text-center mb-4"><h1>Edit <%=blog.title%></h1></div>
    
    <div class="container">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">

            <div class="form-group">
                        <label for="title">Title: </label>
                        <input name="blog[title]" type="text" class="form-control" id="title" placeholder="Title" value="<%=blog.title%>">
            </div>
    
            <div class="form-group">
                        <label for="image">Image: </label>
                        <input name="blog[image]" type="text" class="form-control" id="image" placeholder="Image URL" value="<%=blog.image%>">
            </div>
    
            <div class="form-group">
                        <label for="body">Body: </label>
                        <textarea name="blog[body]" type="text" class="form-control" id="body" rows="4"><%=blog.body%></textarea>
            </div>
    
            <button class="btn btn-success btn-lg" type="submit">Submit</button>
    
        </form>
    </div>

<% include partials/footer %>